<div class="banner" style="background-image: linear-gradient(105.2deg, #000000 -86.12%, rgba(0, 0, 0, 0) 99.98%), url(<%= image_path "woman-girl-rain.jpg"%>);">
  <div class="banner-content">
    <h1>A Good <br>   Deed</h1>
    <p>Build a strong community, help one another</p>
    <form class="form-inline my-2 my-lg-0" action="/">
    <input class="form-control mr-sm-2" name="query" type="search" placeholder="How can you help?" aria-label="Search" value="<%= @query %>">
    <button class="btn button-blue" type="submit">Search</button>
    </form>
  </div>
</div>
<h1>Explore our needers tasks ...</h1>
<div class="map_and_tasks d-flex">

  <div class="container">
    <div class="row">
    <% @tasks.each do |task| %>
      <div class="col-sm-6">
        <div class="card-gd col-md-auto">
          <div class="image">
            <%= image_tag "dog.jpg", class: "img", alt: "dog" %>
          </div>
          <div class="d-flex justify-content-between">
            <p class="date"><%= task.start_time.strftime("%dth %B") %></p>
            <h2 class="category"><%= task.category %></h2>
          </div>
          <h4><%= link_to task.title, task_path(task), class:"task-title" %></h4>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div
  id="map"
  style="margin: 0 16px; width: 100%;
  height: 100vh; position: sticky; top: calc(100vw);"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAP_BOX_API'] %>"
  ></div>

</div>
