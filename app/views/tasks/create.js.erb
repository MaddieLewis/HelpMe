refreshForm = ((innerHTML) => {
  newTaskForm = document.querySelector('#new_task');
    newTaskForm.innerHTML = innerHTML;
});

<% if @task.errors.any?%>
  refreshForm("<%= j render 'form', task: @task %>");
<% else %>
  window.location.replace("<%= task_path(@task) %>");
<% end %>

