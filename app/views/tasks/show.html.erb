<div class="show-page">

  <div class="top-picture" style="background-image: url('https://images.pexels.com/photos/1266005/pexels-photo-1266005.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260')"></div>

  <div class="container margin-top-negative">
    <div class="row">
      <div class="col-8">
        <div class="task-show-card" id="first-card">
          <h1><%= @task.title %></h1>
        </div>
        <div class="task-show-card">
          <%= @task.description %>
        </div>
        <div class="task-show-card">
          <h2>About the Poster</h2>
          <img src=<%= @user.profile_picture %> class="avatar-large">
          <p>Name: <%= @user.first_name + ' ' + @user.last_name %></p>
          <p>About them: <%= @user.description %></p>
          <%= link_to "User Profile", user_path(@user) %>
        </div>
      </div>

      <div class="col-4">
        <div class="task-show-card">
          <h5>Book this Task!</h5>
           <div class="input-group">
              <%= simple_form_for [@task, @booking] do |f| %>

                  <div class="form-inputs select">
                    <%= f.input :status %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, class: "btn btn-dark"%>
                  </div>
                <% end %>
            </div>
        </div>
        <div class="task-show-card">
          <div class="flex-align">

            <div class="flex">
              <%= link_to "Edit Task", edit_task_path(@task), class: "btn button-blue my-2" %>
              <%= link_to "Home", tasks_path, class: "btn button-pink" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
