<div class="show-page">

  <div class="top-picture" style="background-image: url('https://images.pexels.com/photos/1266005/pexels-photo-1266005.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260')"></div>

  <div class="container margin-top-negative">
    <div class="row">
      <div class="col-8">
        <div class="task-show-card" id="first-card">
          <h1><%= @task.title %></h1>
        </div>
        <div class="task-show-card">
          <%= @task.description %>
        </div>
      </div>

      <div class="col-4">
        <div class="task-show-card">
          <h5>Book this Task!</h5>
            </div>
        <div class="task-show-card">
          <div class="flex-align">

            <div class="flex">
              <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-light my-2" %>
              <%= link_to "Home", tasks_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
