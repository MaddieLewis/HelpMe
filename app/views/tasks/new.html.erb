<%= simple_form_for @task do |f| %>
<%= f.input :title, label: "Task Title" %>
<%= f.input :description, label: "Description" %>
<%= f.input :start_date, label: "Start Date" %>
<%= f.input :end_date, label: "End Date" %>
<%= f.input :start_time, label: "Start Time" %>
<%= f.input :end_time, label: "End Time" %>
<%= f.input :category, label: "Category" %>
<% end %>
