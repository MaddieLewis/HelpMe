<div class="container mt-3">
  <% if @user == current_user %>
    <h3>Hello<%= @user.first_name %>!</h3>
  <% else %>
    <h3>Welcome to my page!</h3>
  <% end %>
  <div class="card">
    <div class="card-body">
      <img src="<%= @user.profile_picture %>" alt="" class="avatar-large">
      <div class="mt-3">
        <p> <%= @user.first_name %> <%= @user.last_name %> </p>
        <p>About me: <%= @user.description %></p>
      </div>
    </div>
  </div>
  <% if @user == current_user %>

    <h5 class="mt-3">Your tasks: </h5>
    <% @user.tasks.each do |task| %>
      <div class="card">
        <div class="card-body">
          <p><%= task.title %></p>
          <p><%= task.description %></p>
        </div>
      </div>
    <% end %>

      <h5 class="mt-3">You have offered to help!</h5>
      <% @user.bookings.each do |booking| %>
        <div class="card">
          <div class="card-body">
            <p><%= User.find(booking.task.user_id).first_name %>'s Task</p>
            <%= booking.task.description %>
            <% if booking.status == "pending" %>
              <%= link_to "confirm", tasks_path %>
              <% elsif booking.status == "confirmed" %>
              <%= link_to "confirm", tasks_path %>
            <% end %>
          </div>
        </div>
      <% end %>

    <% end %>

</div>
